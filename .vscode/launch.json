    "version": "0.0.1",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Vitest - Debug Current Test File",
        "autoAttachChildProcesses": true,
        "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
        "args": ["run", "${relativeFile}"],
        "smartStep": true,
        "console": "integratedTerminal"
      }
    ]
  }
  