{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "newLine": "lf",
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "removeComments": false,
    "lib": ["ES2016", "DOM"],
    "rootDir": ".",
    "paths": {
      "@mini/*": [
        "packages/vue/*/src",
        "packages/react/*/src",
        "packages/vue3/*/src"
      ]
    },
    "composite": true
  },
  "include": [
    "rollup.*.js",
    "packages/react/*/src",
    "packages/vue/*/src",
    "packages/vue3/*/src",
    "scripts/*"
  ]
}
